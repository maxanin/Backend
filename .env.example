# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/sepidar_pwa

# JWT Configuration
# IMPORTANT: Generate a secure random string of at least 32 characters
# Example: openssl rand -base64 32
APP_JWT_SECRET=replace-with-a-32-characters-secret--------------------------------

# Sepidar API Configuration
SEPIDAR_URL=http://localhost:7373/api

# Optional: Sepidar Default Generation Version
DEFAULT_GENERATION_VERSION=101

# CORS Configuration
# Comma-separated list of allowed origins
# In production, specify exact origins instead of using wildcard
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging Configuration
LOG_LEVEL=info
